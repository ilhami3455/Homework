print("### BURCUNUZU MERAK EDIYORMUSUNUZ? ###")
print("""***Dogum ayi ve gunleri****:
(1)  Ocak\t (1'den 31'e kadar)
(2)  Subat\t (1'den 28'e kadar)
(3)  Mart\t (1'den 31'e kadar)
(4)  Nisan\t (1'den 30'e kadar)
(5)  Mayis\t (1'den 31'e kadar)
(6)  Haziran\t (1'den 30'e kadar)
(7)  Temmuz\t (1'den 31'e kadar)
(8)  Agustos\t (1'den 31'e kadar)
(9)  Eylul\t (1'den 30'e kadar)
(10) Ekim\t (1'den 31'e kadar)
(11) Kasim\t (1'den 30'e kadar)
(12) Aralik\t (1'den 31'e kadar)""")
while True:
    baslamak=input("Programdan Cikmak icin 'q' ya, Devam etmek icin 'c' ye basin:")
    if baslamak=="q":
        print("Program kapatiliyor...")
        quit()
    elif baslamak=="c":
        dogum_ayi=int(input("Lutfen yukarida dogum ayiniza verilen numarayi giriniz:"))
        dogum_gunu=int(input("lutfen dogum gununuzu aylar icin verilen deger araliginda giriniz:"))
        if dogum_ayi==1:
            if 0<dogum_gunu<=21:
                print("Burcunuz OGLAK burcudur.")
            elif 21<dogum_gunu<=31:
                print("Burcunuz KOVA burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==2:
            if 0<dogum_gunu<=19:
                print("Burcunuz KOVA burcudur.")
            elif 19<dogum_gunu<=28:
                print("Burcunuz BALIK burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==3:
            if 0<dogum_gunu<=20:
                print("Burcunuz BALIK burcudur.")
            elif 20<dogum_gunu<=31:
                print("Burcunuz KOC burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==4:
            if 0<dogum_gunu<=20:
                print("Burcunuz KOC burcudur.")
            elif 20<dogum_gunu<=30:
                print("Burcunuz BOGA burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==5:
            if 0<dogum_gunu<=21:
                print("Burcunuz BOGA burcudur.")
            elif 21<dogum_gunu<=31:
                print("Burcunuz IKIZLER burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==6:
            if 0<dogum_gunu<=22:
                print("Burcunuz IKIZLER burcudur.")
            elif 22<dogum_gunu<=30:
                print("Burcunuz YENGEC burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==7:
            if 0<dogum_gunu<=22:
                print("Burcunuz YENGEC burcudur.")
            if 22<dogum_gunu<=31:
                print("Burcunuz ASLAN burcudur.")
        elif dogum_ayi==8:
            if 0<dogum_gunu<=22:
                print("Burcunuz ASLAN burcudur.")
            elif 22<dogum_gunu<=31:
                print("Burcunuz BASAK burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==9:
            if 0<dogum_gunu<=22:
                print("Burcunuz BASAK burcudur.")
            elif 22<dogum_gunu<=30:
                print("Burcunuz TERAZI burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==10:
            if 0<dogum_gunu<=21:
                print("Burcunuz TERAZI burcudur.")
            elif 21<dogum_gunu<=31:
                print("Burcunuz AKREP burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==11:
            if 0<dogum_gunu<=21:
                print("Burcunuz AKREP burcudur.")
            elif 21<dogum_gunu<=30:
                print("Burcunuz YAY burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        elif dogum_ayi==12:
            if 0<dogum_gunu<=21:
                print("Burcunuz YAY burcudur.")
            elif 21<dogum_gunu<=31:
                print("Burcunuz OGLAK burcudur.")
            else:
                print("Lutfen verilen deger araliginda bir deger girniz!")
        else:
            print("Lutfen aciklama kismindaki degerlerden birini giriniz:") 
    else:
        print("Lutfen 'q' yada 'c' opsiyonlarindan birini secin.")
